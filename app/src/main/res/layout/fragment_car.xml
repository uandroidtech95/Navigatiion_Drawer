<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.utsav.navigatiion_drawer.CarFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="#FF69B4">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_car"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/car"
            android:backgroundTint="#ffffff" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/ibtn_car_write"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:background="@android:drawable/ic_menu_edit"
            android:backgroundTint="#ffffff" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/ibtn_car_heart"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/ibtn_car_write"
            android:background="@drawable/heart" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_car_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_car"
            android:layout_marginStart="15dp"
            android:text="@string/car_name"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/ratingBar"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_car_name"
            android:layout_below="@+id/tv_car_name"
            android:numStars="5"
            android:rating="5"
            android:stepSize=".2" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_car_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="20dp"
            android:text="Write your Review"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="15dp"
        android:background="@drawable/car_rectangle">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_car_phoneno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:text="+91 1234567890"
            android:textSize="20sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_car_phoneno"
            android:layout_below="@+id/tv_car_phoneno"
            android:text="Office"
            android:textSize="20sp" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/ibtn_car_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:background="@android:drawable/ic_menu_call"
            android:backgroundTint="#ffff00" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="15dp"
        android:background="@drawable/car_rectangle">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_car_driver_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:text="@string/car_driver_title"
            android:textSize="20sp" />

        <View
            android:id="@+id/car_line"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/tv_car_driver_title"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:background="#ffffff" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_photo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignStart="@id/car_line"
            android:layout_below="@id/car_line"
            android:layout_margin="15dp"
            android:background="@drawable/circle"
            app:srcCompat="@mipmap/ic_launcher" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_car_driver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_line"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/iv_photo"
            android:text="@string/car_driver_name"
            android:textSize="22sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_car_shift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_car_driver_name"
            android:layout_below="@id/tv_car_driver_name"
            android:text="First,Second Shift" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/ibtn_car_driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="80dp"
            android:background="@android:drawable/ic_menu_call"
            android:backgroundTint="#ffff00" />
    </RelativeLayout>


</LinearLayout>
